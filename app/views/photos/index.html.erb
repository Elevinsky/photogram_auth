<div class="container">
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/photos/new" class="btn btn-default btn-block"><i class="fa fa-plus" aria-hidden="true"></i></a>
    <hr>
  </div>
</div>
<% @photos.each do |photo| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%=photo.user_id%>"> <%= photo.user_id %></a>
          <small>time_ago_in_words(photo.created_a)</small></h3></div>
      <div class="panel-body">
        <a href="/photo/<%= photo.id %>"><img src="<%= photo.image %>" class="img-responsive"></a>
        <form action="/create_like" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
            <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user %>">
          </div>

          <!-- Label and input for photo_id -->
            <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= photo.id %>">
            <button class="btn btn-link"><i class="fa fa-heart" aria-hidden="true"></i></button>
            <small class="text muted">like this</small>
          </form>
          <ul class="media-list">
            <li class="media">
              <div class="media-body">
                <h6 class="media-heading"><%= photo.caption %></h6>
              </div>
            </li>
            <li class="media">
              <div class="media-body">
                <form action="/create_comment" method="post">
                  <!-- Hidden input for authenticity token to protect from forgery -->
                  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

                  <!-- Label and input for photo_id -->
                    <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= photo.id %>">

                  <!-- Label and input for body -->
                  <div class="form-group">
                    <input id="text" name="body" placeholder="Add a commment..." class="form-control"><%= @comment.body %></textarea>
                  </div>

                  <!-- input for user_id -->
                    <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
                  </form>
                </div>
              </div>
            </li>
          </div>
        </div>
        <% end %>
  </div>
